apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: metering-admins
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: metering-admin
subjects:
{% for perm in meteringconfig_spec.permissions.meteringAdmins %}
- kind: "{{ perm.kind }}"
  name: "{{ perm.name }}"
{% if perm.namespace %}
  namespace: "{{ perm.namespace }}"
{% endif %}
{% if perm.apiGroup %}
  apiGroup: "{{ perm.apiGroup }}"
{% endif %}
{% endfor %}

